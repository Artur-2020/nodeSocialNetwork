<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/posts.css">
    <link rel="stylesheet" href="https://cdn.lineicons.com/2.0/LineIcons.css">

</head>
<body>
    <header>
     <%-include( './partials/header',{user:user})%>
    </header>
    <div id="showPosts">
      <% posts.forEach((i)=>{ %>
          <div class="postMain">            
              <div class="postText">
                <p><%=i.text%></p>
              </div>
             <img class="postImg" src="<%=i.picture%>">
             <div class="postBtns">
              <button class="like"  data-id=<%=i.id%></button>><i class="lni lni-heart"></i> Like</button>
              <button class="showComments" data-id=<%=i.id%>><i class="lni lni-bubble"></i> Comment</button>
            </div>
 
            <div class="commentMain">
 
            </div>
            <div class="commentNow">

            </div>
            <div class="sendComment">
              <input class="comText" type="text" >
              <button class="addComment" data-id = <%=i.id%>>Send</button>
            </div>
          </div>
       <%})%>

     
  </div>

</body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
    <script src="js/posts.js"></script>
</html>