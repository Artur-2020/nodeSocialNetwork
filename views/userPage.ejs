<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link rel="stylesheet" href="../css/friendPage.css">
  
 
<link rel="stylesheet" href="https://cdn.lineicons.com/2.0/LineIcons.css">
</head>
<body>
  <!-- navbar start -->
  <header>
     <%-include( './partials/header',{user:user})%>

  </header>
  <!-- navbar end -->

  <!-- main start -->
  <!-- commenti jamanak avelacnelu hamar -->
  <img src="../<%=user.image%>" id="userImage" alt="" style="display: none;">
  <p id="userName" style="display: none;"><%=user.name%></p>
  <p id="userSurname" style="display: none;"><%=user.surname%></p>

  <div id="main">
    <div class="container">
      <div class="avatarInfo">
      <!-- useri nkari hatvac -->
  
        <div class="userAvatar">
          <div class="userAvatarimage">
            <img  src="../<%=friend.image%>" alt="">
          </div>
          <div class="info">
            <p><span ><%=friend.name%></span> <span ><%=friend.surname%></span> </p>
            <p class="year"><%=friend.age%> Years Old</p>
            <%if(flag=="ynker enq"){%>
              <button data-id='<%=id%>'id='ynkerner'>Delete</button>
              
             <%} else {%>
             <button id="vochYnker">Add</button>
             <%}%>
          </div>

          <!-- friend photo link start -->
          <div class="fotoFriend">
            <ul>
              <li><a href="/userPhotos/<%=id%>">  <i class="lni lni-image"></i> Photos</a></li>
              <li><a href="/userFriends/<%=id%>"> <i class="lni lni-users"></i> Friends</a></li>
              <li><a href="/userPosts/<%=id%>"> <i class="lni lni-pencil"></i>Posts</a></li>
            </ul>
          </div>
        </div>
        <!-- nkari hatvac end -->
  
    
   
    </div>
    <!-- main end -->
    <div id="showPosts">
  
  
     
        <% posts.forEach((i)=>{ %>
            <div class="postMain">
              <div class="authorPost">
                <div class="user_info">
                  <img src="../<%=friend.image%>" alt="">
                  <div>
                    <p><%=friend.name%> <%=friend.surname%> </p>
                  </div>
                </div>
              </div>
                <div class="postText">
                  <p><%=i.text%></p>
                </div>
                <% if(i.picture){%>
                  <img class="postImg" src="../<%=i.picture %>">
                 <%}%>
               <div class="postBtns" data-id="<%=i.id%>">
                <%if(i.liked==true){%>
                  <button class="disLike" data-id=<%=i.id%>><i class="lni lni-heart"></i> Like </button>
                  <span class="likeCount" data-toggle="modal" data-target="#getLikersModal"> <%=i.likes%></span>
                 <%} else {%>
                 
                   <button class="like" data-id=<%=i.id%>><i class="lni lni-heart"></i> Like</button>
                   <span class="likeCount" data-toggle="modal" data-target="#getLikersModal"> <%=i.likes%></span>
                 <%}%>
                <button class="showComments" data-id=<%=i.id%>><i class="lni lni-bubble"></i> Comment</button>
              </div>
   
              <div class="commentMain">
   
              </div>
              <div class="commentNow">
  
              </div>
              <div class="sendComment">
                <input class="comText" type="text" >
                <button class="addComment" data-id = <%=i.id%>>Send</button>
              </div>
            </div>
         <%})%>
  
         
    </div>

    </div>
    
  </div>
   
      <div class="modal fade" id="getLikersModal" tabindex="-1" role="dialog" aria-labelledby="getLikersModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
          <h5 class="modal-title" id="getLikersModalLabel">Likers</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          </div>
          <div class="modal-body" id="likersBody">
         
          </div>
          <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
        </div>
      </div>
      
      
</body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
  <script src="../js/friendPage.js"></script>
  
  
</html>