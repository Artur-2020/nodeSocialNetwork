          <p class="error" ><%=passerrors.newPassword%></p>  
             
             <input type="password" class="inp"  name='newPassword'> 
          <label>Confirm New Password</label> 
          <p class="error" ><%=passerrors.confirm_password%></p>  
   
             <input type="password" class="inp"  name='confirm_password'> 
            <div id="btn" >
               <button class="editBtn">Change</button>
            </div>
      </form>
