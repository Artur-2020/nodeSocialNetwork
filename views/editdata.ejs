             <input type="text" class="inp"  name='age'value = <%= user.age%>> 
          <label>Email</label>
             <p class="error"  ><%=editerrors.email%></p>
             <input class="inp" type="text" name="email" value = <%=user.email%>> 
            <div id="btn" >
               <button class="editBtn">Edit</button>
            </div>
       </form>
       <form action="/changePassword" method="post" class="activeForm" id="passwordForm">
