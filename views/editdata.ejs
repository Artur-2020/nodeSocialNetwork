    <%} %>   
  </div>

   
   <%if(flag=='ka'){%>
      <div id="edit">
         <h1 id="editHead">Edit Password</h1>
       <form action="/editData" method="post" class="passiveForm" id="personalForm">
          <label>Name</label>
             <p class="error"><%=editerrors.name%></p>  
             <input type="text" name='name' class="inp" value = <%=user.name%>> 
    
          <label>Surname</label>
             <p class="error" ><%=editerrors.surname%></p>  
